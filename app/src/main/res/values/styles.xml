<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:fontFamily">@font/pixchicago</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!-- BUTTON STYLE -->
    <style name="CustomButton" parent="android:Widget.Material.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:background">@drawable/shadow_button</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- ALERT DIALOG STYLE -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">#000000</item>
    </style>

</resources>
